<a href="/admin/dashboard">&larr; Back</a>

<div class="admin-title">
    <h2>View / Edit post</h2>
    <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn btn-delete">
    </form>
</div>

<form action="/admin/edit-post/<%= post._id %>?_method=PUT" method="POST">
    <label for="title"><b>Title</b></label>
    <input type="text" name="title" value="<%= post.title %>" placeholder="Post Title" id="title" class="title">

    <label for="body"><b>Content</b></label>
    <textarea type="text" name="body" cols="50" rows="10" id="body" class="body"><%= post.body %></textarea>

    <input type="submit" value="Update" class="btn">
</form>