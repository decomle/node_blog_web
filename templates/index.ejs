<div class="author">
    <h1 class="author__heading">Hi, I'm Dat Phung</h1>
    <p class="author__body">Web developer and learner</p>
</div>

<img src="/img/hero-image.webp" alt="Dat Phung relearn everything" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="artiles_heading">Latest Posts</h2>
    <ul class="article-ul">
        <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
    <% } %>
    
</section>